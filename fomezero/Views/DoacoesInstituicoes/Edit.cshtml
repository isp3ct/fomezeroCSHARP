@model fomezero.Models.DoacoesInstituico

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-4">Editar Doação para Instituição</h1>


<div class="row mt-4">
    <div class="col-md-8 offset-md-2">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DoacaoId" class="control-label">Tipo de Doação</label>
                <select asp-for="DoacaoId" class="form-control" asp-items="ViewBag.DoacaoDescricaoAlimento"></select>
                <span asp-validation-for="DoacaoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstituicaoId" class="control-label">Instituição</label>
                <select asp-for="InstituicaoId" class="form-control" asp-items="ViewBag.InstituicaoNome"></select>
                <span asp-validation-for="InstituicaoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Voltar para Lista</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
