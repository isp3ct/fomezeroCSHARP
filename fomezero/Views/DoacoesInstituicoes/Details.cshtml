@model fomezero.Models.DoacoesInstituico

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">Detalhes da Doação para Instituição</h1>

<div>
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Doacao)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Doacao.DescricaoAlimento)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Instituicao)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Instituicao.Nome)
                </dd>
            </dl>
        </div>
    </div>
    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary ml-2">Voltar para Lista</a>
    </div>
