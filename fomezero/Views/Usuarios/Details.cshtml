@model fomezero.Models.Usuario

@{
    ViewData["Title"] = "Detalhes do Usuário";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="mb-4">Detalhes do Usuário</h1>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Informações do Usuário</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                        <dt class="col-sm-3 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-3 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Telefone)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Telefone)
                        </dd>
                        <dt class="col-sm-3 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Senha)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Senha)
                        </dd>
                        <dt class="col-sm-3 font-weight-bold">
                            CPF
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.DocumentoIdentificacao)
                        </dd>
                        <dt class="col-sm-3 font-weight-bold">
                            Tipo de Usuário
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.TipoUsuario.Descricao)
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a>
                <a asp-action="Index" class="btn btn-secondary ml-2">Voltar para Lista</a>
            </div>
        </div>
    </div>
</div>