@model fomezero.Models.Doacao

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">Detalhes da Doação</h1>

<div>
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    Valor da doação
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Valor)
                </dd>
                <dt class="col-sm-2">
                    Tipo de Doação
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DescricaoAlimento)
                </dd>
                <dt class="col-sm-2">
                    Data de doação
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataDoacao)
                </dd>
                <dt class="col-sm-2">
                    Alimento Doado
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TipoDoacao.Descricao)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Usuario)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Usuario.Email)
                </dd>
            </dl>
        </div>
    </div>
    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary ml-2">Voltar para Lista</a>
    </div>
