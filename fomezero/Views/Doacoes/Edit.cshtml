@model fomezero.Models.Doacao

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-4">Editar Doação</h1>


<div class="row mt-4">
    <div class="col-md-8 offset-md-2">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label">Usuário</label>
                <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoDoacaoId" class="control-label">Tipo de Doação</label>
                <select asp-for="TipoDoacaoId" class="form-control" asp-items="ViewBag.TipoDoacaoDescricao"></select>
                <span asp-validation-for="TipoDoacaoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescricaoAlimento" class="control-label">Alimento doado</label>
                <input asp-for="DescricaoAlimento" class="form-control" />
                <span asp-validation-for="DescricaoAlimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDoacao" class="control-label"></label>
                <input asp-for="DataDoacao" class="form-control" />
                <span asp-validation-for="DataDoacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Voltar para Lista</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
