@model fomezero.Models.RetiradaDoacao

@{
    ViewData["Title"] = "Editar Retirada de Doação";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="mb-4">Editar Retirada de Doação</h1>
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="DoacaoId" class="control-label">Tipo de Doação</label>
                            <select asp-for="DoacaoId" class="form-control" asp-items="ViewBag.DoacaoDescricaoAlimento"></select>
                            <span asp-validation-for="DoacaoId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BeneficiarioId" class="control-label">Beneficiário</label>
                            <select asp-for="BeneficiarioId" class="form-control" asp-items="ViewBag.BeneficiarioId"></select>
                            <span asp-validation-for="BeneficiarioId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LocalRetiradaId" class="control-label">Endereço de Retirada</label>
                            <select asp-for="LocalRetiradaId" class="form-control" asp-items="ViewBag.LocalRetiradaEndereco"></select>
                            <span asp-validation-for="LocalRetiradaId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DataAgendada" class="control-label">Data da Doação</label>
                            <input asp-for="DataAgendada" class="form-control" />
                            <span asp-validation-for="DataAgendada" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DataRetirada" class="control-label">Data de Retirada da Doação</label>
                            <input asp-for="DataRetirada" class="form-control" />
                            <span asp-validation-for="DataRetirada" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-4">
                            <input type="submit" value="Salvar" class="btn btn-success" />
                            <a asp-action="Index" class="btn btn-secondary ml-2">Voltar para Lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
